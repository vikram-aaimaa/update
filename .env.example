# Boganto Blog - Environment Configuration Template
# Copy this file to .env.local in the frontend directory
# cp .env.example frontend/.env.local

# ==================================================
# API Configuration
# ==================================================

# Base URL for API calls
# Development: http://localhost:8000
# Production: https://boganto.com
NEXT_PUBLIC_API_BASE_URL=https://boganto.com

# ==================================================
# Image Configuration  
# ==================================================

# Enable/disable image optimization
# Development: true (faster builds)
# Production: false (optimized images)
NEXT_PUBLIC_UNOPTIMIZED_IMAGES=false

# ==================================================
# Application Configuration
# ==================================================

# Node environment
NODE_ENV=production

# Application port (frontend)
PORT=3000

# ==================================================
# Backend Configuration (if needed)
# ==================================================

# Database configuration (for PHP backend)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=boganto_blog
DB_USER=boganto_user
DB_PASS=your_secure_password_here

# Session secret
SESSION_SECRET=your_session_secret_here_change_this_in_production

# ==================================================
# Deployment Configuration
# ==================================================

# Deployment type: nginx | cloudfront | standalone
DEPLOYMENT_TYPE=nginx

# Domain configuration
DOMAIN=boganto.com
BLOG_PATH=/blog

# ==================================================
# Optional: CDN Configuration
# ==================================================

# If using separate CDN for uploads
# CDN_URL=https://cdn.boganto.com

# ==================================================
# Optional: Monitoring & Analytics
# ==================================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry (error tracking)
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@sentry.io/xxx

# ==================================================
# Development Only
# ==================================================

# Enable verbose logging
# DEBUG=true

# Skip SSL verification (local development only)
# NODE_TLS_REJECT_UNAUTHORIZED=0
